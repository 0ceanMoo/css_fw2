  Button
// ============================================== */
// https://copypet.jp/417/

button(c=black, bg=white, bd=, h_c=, h_bg=)
  if h_c
    h_c = bg
  if h_bg
    h_bg = c

  if bd
    if bd == 1
      bd = bg   // bd=1にると、背景色
  else
    bd = c      // bdでボーダーの色指定しなければ、文字色

  border-color: bd
  color: c
  background: bg
  &:hover
    color: h_c
    background: h_bg

.{compo_prefix}Btn
  button
  box-sizing: border-box
  display: inline-block
  padding: .5rem 1.2rem .2rem
  border: 1px solid
  cursor: pointer
  letter-spacing: normal
  transition: .4s

  &.{modif_prefix}Black
    button(white, black, 1)
  &.{modif_prefix}red
    button(color-red)
  &.{modif_prefix}Red
    button(white, color-red, 1)
  &.{modif_prefix}blue
    button(color-blue)
  &.{modif_prefix}Blue
    button(white, color-blue, 1)
  &.{modif_prefix}orange
    button(color-orange)
  &.{modif_prefix}Orange
    button(white, color-orange, 1)
  &.{modif_prefix}teal
    button(color-teal)
  &.{modif_prefix}Teal
    button(white, color-teal, 1)
  &.{modif_prefix}yellow
    button(#983, white, color-yellow, black, color-yellow)
  &.{modif_prefix}Yellow
    button(black, color-yellow, 1, #983, white)
  &.{modif_prefix}pink
    button(#c66, white, color-pink, black, color-pink)
  &.{modif_prefix}Pink
    button(black, color-pink, 1, #c66, white)
  &.{modif_prefix}navy
    button(color-navy)
  &.{modif_prefix}Navy
    button(white, color-navy, 1)

  &.{modif_prefix}info
    button(color-info)
  &.{modif_prefix}Info
    button(white, color-info, 1)

  &.{modif_prefix}warn
    button(#983, white, color-warn, black, color-warn)
  &.{modif_prefix}Warn
    button(black, color-warn, 1)

  &.{modif_prefix}error
    button(color-error)
  &.{modif_prefix}Error
    button(white, color-error, 1)

  &.{modif_prefix}ok
    button(color-ok)
  &.{modif_prefix}Ok
    button(white, color-ok, 1)

  &.{modif_prefix}ng
    button(#c66, white, color-ng, black, color-ng)
  &.{modif_prefix}Ng
    button(black, color-ng, 1)

